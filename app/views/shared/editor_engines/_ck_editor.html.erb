<%= javascript_include_tag Ckeditor.cdn_url %>
<%= javascript_include_tag 'ckeditor/config.js' %>

<script>
    $(function () {
        <% ids.each do |id| %>
        if ($("#<%= id %>").length > 0) {
            CKEDITOR.replace("<%= id %>", {
                filebrowserUploadUrl: "/ckeditor/pictures?responseType=json",
                filebrowserImageBrowseUrl: "/ckeditor/pictures",
                filebrowserImageUploadUrl: "/ckeditor/pictures?"
            });
        }
        <% end %>
    });
</script>
